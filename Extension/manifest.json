{
    "manifest_version": 2,  
    "name": "Simple Chrome Extension",
    "version": "1.0",    
    "description": "This simple extension send data to server. When you refresh browser, it will send data to server.",
    "permissions": [
		"webNavigation", 
		"http://127.0.0.1:8080/"
    ],
    "background": {        
        "scripts": ["js/background.js"],
        "persistent": false
    },      
    "browser_action": {
        "default_title": "Simple Chrome Extension"
    }
    
}
